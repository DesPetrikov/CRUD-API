{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES6",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
	"esm": true
 },
}
