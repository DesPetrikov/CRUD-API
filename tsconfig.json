{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES6",
    "outDir": "./dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
  },
  "include": ["./src/**/*", "src/tests"],
  "exclude": ["node_modules"],
  "ts-node": {
	"esm": true
 },
}
